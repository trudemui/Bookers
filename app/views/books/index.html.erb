 <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
 <% end %>
<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>

	<tbody>
<% @books.each do |book| %>
	 <tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book_path(book.id) %></td>
		<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
		<td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
	<% end %>
	</tbody>
</table>


<h2>New book</h2>

<%= form_for(@book) do |f| %>


	<h4>Title</h4>
	<%= f.text_field :title %>
	<% if @book.errors.messages[:title].any? %>
	<span class="error"><%= @book.errors.messages[:title][0] %>
	</span>
	<% end %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<% if @book.errors.messages[:body].any? %>
	<span class="error"><%= @book.errors.messages[:body][0] %></span>
	<% end %>

	<div>
		<%= f.submit 'Create book' %>
	</div>
<% end %>